\ \ \ \ \-from\ "jsnow\@gmail.com"\ \ \\
\ \ \ \ \-to\ \ "mjane\@example.com"\ \-from\ "jsnow\@gmail.com"\ \\
\ \ \ \ body\ \\
\ \ \ \ \ \-msg\ "<b>hello,\ world!</b>"
\f[]
